@model MVCBlog.Models.Category

@{
    ViewBag.Title = "Create Category";
}

<ul class="uk-breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="uk-active"><span>Create Category</span></li>
</ul>

<h2>Create Category</h2>

<form action="@Url.Action("CreateCategory", "Blog")" method="post" class="uk-form uk-form-horizontal">

    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
        <div class="uk-form-row">
            <label class="uk-form-label">@Html.LabelFor(model => model.CategoryName)</label>
            <div class="uk-form-controls">
                <input class="uk-form-width-large" data-val="true" data-val-required="The Category Name field is required." id="CategoryName" name="CategoryName" type="text" value="" />
                <span class="field-validation-valid" data-valmsg-for="CategoryName" data-valmsg-replace="true"></span>
            </div>
        </div>
        
        <div class="uk-form-row">
            <button class="uk-button uk-button-success" type="submit">Add Category</button>
            <a class="uk-button uk-button-primary" href="@Url.Action("Index", "Home")">Cancel</a>
        </div>
    </fieldset>
</form>
