@model MVCBlog.Models.Article

@{
    ViewBag.Title = "Create Article";
}

<ul class="uk-breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="uk-active"><span>Create Article</span></li>
</ul>

<h2>Create Article</h2>

<!-- just an experiment with color of text depending on value random returns
@{
    var random = new Random();
    var theClass = random.Next(2) % 2 == 0 ? "error" : "success";
}

<style type="text/css">
    .error {
        color: red;
    }

    .success {
        color: green;
    }
</style>
-->

<form action="@Url.Action("CreateArticle", "Blog")" method="post" class="uk-form uk-form-horizontal">

    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
        <div class="uk-form-row">
            <label class="uk-form-label @theClass">@Html.LabelFor(model => model.ArticleName)</label>
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.ArticleName, new { @class = "uk-form-width-large" })
                @Html.ValidationMessageFor(model => model.ArticleName)
            </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label">@Html.LabelFor(model => model.CategoryId, "Category")</label>
            <div class="uk-form-controls">
                @Html.DropDownList("CategoryId", String.Empty)
                @Html.ValidationMessageFor(model => model.CategoryId)
            </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label">@Html.LabelFor(model => model.ArticleText)</label>
            <div class="uk-form-controls" >
                @Html.TextAreaFor(model => model.ArticleText)
                @Html.ValidationMessageFor(model => model.ArticleText)
            </div>
        </div>
        <p>@Html.Hidden("UserId", 3)</p>
        <div class="uk-form-row">
            <button class="uk-button uk-button-success" type="submit">Add Article</button>
        </div>
    </fieldset>
</form>

<div>
    @Html.ActionLink("Back to List", "Category")
</div>
